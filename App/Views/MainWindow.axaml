<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AntUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1080"
        x:Class="AntUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="App">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Name="rootPanel">
        <!-- TODO: Replace with our drawing component -->
        <Canvas 
            MinHeight="500"
            MinWidth="500"
            Background="Blue" 
            DockPanel.Dock="Top">
        </Canvas>
        <WrapPanel 
            Name="toolbarPanel"
            Background="Gray"
            VerticalAlignment="Stretch"
            DockPanel.Dock="Bottom">
            <Button 
                Name="testButton"
                Content="{Binding TestButtonText}"
                Command="{Binding OnTestClick}">
            </Button>
        </WrapPanel>
    </DockPanel>
</Window>
